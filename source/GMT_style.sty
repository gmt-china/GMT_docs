\usepackage[labelfont={small,bf}, textfont=small]{caption}
\captionsetup[figure]{aboveskip=6pt, belowskip=6pt}
\captionsetup[table]{aboveskip=6pt, belowskip=-12pt}

% 首行缩进
\usepackage{indentfirst}
\setlength{\parindent}{2em}

