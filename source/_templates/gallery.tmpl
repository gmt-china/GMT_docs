	{% for fig in group['gallery'] %}
	{% if fig["image"].startswith("http") %}  {# absolute URL for external images #}
		{% set image = fig["image"] %}
		{% set link, link_type = fig["target"], "doc" %}
	{% else %}  {# internal images #}
		{% set image = config.html_context["siteurl"] + "/_images/" + fig["image"] + ".png" %}
