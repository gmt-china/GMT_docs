-  .. figure:: {{ config.html_context["siteurl"] }}/_images/{{ fig["image"] }}.png
      :align: center
      :target: {{ config.html_context["siteurl"] }}/{{ fig["target"] }}#gmtplot-{{ fig["image"] }}

      `{{ fig["title"] }} <{{ config.html_context["siteurl"] }}/{{ fig["target"] }}>`__
{% endif %}

{% endfor %}
